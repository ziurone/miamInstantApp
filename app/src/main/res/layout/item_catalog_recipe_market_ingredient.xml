<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_small">

    <TextView
        android:id="@+id/ingredientWithQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginStart="@dimen/spacing_large"
        style="@style/ItemTitle"
        tools:text="1/4 de pollo"/>

    <TextView
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ingredientWithQuantity"
        app:layout_constraintBottom_toBottomOf="@id/articleName"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/CatalogRecipeMarketIngredientPrice"
        tools:text="$200"/>

    <TextView
        android:id="@+id/articleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        app:layout_constraintLeft_toLeftOf="@id/ingredientWithQuantity"
        app:layout_constraintTop_toBottomOf="@id/ingredientWithQuantity"
        style="@style/Body1"
        tools:text="Pollo granja miam"/>

    <TextView
        android:id="@+id/haveIngredientButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xsmall"
        app:layout_constraintLeft_toLeftOf="@id/ingredientWithQuantity"
        app:layout_constraintTop_toBottomOf="@id/articleName"
        android:text="@string/recipe_detail_have_ingredient_action"
        android:textAllCaps="true"
        style="@style/MarketIngredientUserHaveIngredient"/>

</androidx.constraintlayout.widget.ConstraintLayout>