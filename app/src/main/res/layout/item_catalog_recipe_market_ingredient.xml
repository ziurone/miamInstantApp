<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_item"
    android:layout_marginTop="@dimen/spacing_small">

    <ImageView
        android:id="@+id/marketIngredientIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginStart="@dimen/spacing_large"
        android:src="@drawable/ic_recipe_user_ingredient"/>


    <TextView
        android:id="@+id/ingredientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/articleName"
        app:layout_constraintLeft_toRightOf="@id/marketIngredientIcon"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginStart="@dimen/spacing_large"
        tools:text="1/4 de pollo"/>

    <TextView
        android:id="@+id/articleName"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="@dimen/match_constraint"
        app:layout_constraintLeft_toLeftOf="@id/ingredientName"
        app:layout_constraintTop_toBottomOf="@id/ingredientName"
        app:layout_constraintRight_toLeftOf="@id/marketIngredientIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Pollo granja miam"/>

</androidx.constraintlayout.widget.ConstraintLayout>