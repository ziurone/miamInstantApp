<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ingredientsAutocompleteInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xxxlarge"
        android:layout_marginEnd="@dimen/spacing_xxxlarge"
        android:layout_marginTop="@dimen/spacing_xxxlarge"
        style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginBottom="@dimen/spacing_item"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ingredientsAutocompleteList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xxxlarge"
        android:layout_marginEnd="@dimen/spacing_xxxlarge"
        app:layout_constraintTop_toBottomOf="@id/ingredientsAutocompleteInput"/>

    <TextView
        android:id="@+id/suggestedIngredientsCardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ingredientsAutocompleteList"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginStart="@dimen/spacing_large"
        style="@style/Body1"
        android:text="@string/suggested_ingredients_title"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipsGroupSuggestedIngredients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/suggestedIngredientsCardTitle"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginStart="@dimen/spacing_large"
        app:singleSelection="true"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:chipSpacing="10dp" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/selectedIngredientsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/chipsGroupSuggestedIngredients"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/generic_card_outer_margin"
        android:padding="@dimen/generic_card_inner_padding">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dispensaryIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_large"
                android:src="@drawable/ic_salad"/>

            <TextView
                android:id="@+id/selectedIngredientsCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/dispensaryIcon"
                app:layout_constraintBottom_toBottomOf="@id/dispensaryIcon"
                app:layout_constraintLeft_toRightOf="@id/dispensaryIcon"
                android:textSize="22sp"
                android:paddingTop="@dimen/spacing_large"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginStart="@dimen/spacing_large"
                style="@style/Headline3"
                android:text="@string/selected_ingredients_title"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/userIngredientsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/selectedIngredientsCardTitle"
                android:paddingTop="@dimen/spacing_large"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginRight="@dimen/spacing_large"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:background="@color/secondary_light"
                tools:listitem="@layout/item_user_ingredient"
                tools:itemCount="1"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/searchRecipesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/selectedIngredientsCard"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="66dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1.0"
        style="@style/ButtonPrimary"
        android:text="@string/dispensary_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>