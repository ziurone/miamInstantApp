<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="bottomNavigationStyle">@style/BottomBar</item>
        <item name="chipStyle">@style/Chip</item>
        <item name="chipStandaloneStyle">@style/Chip</item>
        <item name="chipGroupStyle">@style/Chip</item>
        <item name="colorPrimary">#FF652B</item>
        <item name="colorPrimaryVariant">#D84F1F</item>
        <item name="colorOnPrimary">#FAF5F2</item>
        <item name="android:colorSecondary">#97AB2B</item>
        <item name="colorSecondaryVariant">#5E7711</item>
        <item name="colorSurface">#FAF5F2</item>
        <item name="colorOnSurface">#1A2704</item>
    </style>

    <!-- Chip -->
    <style name="Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/secondary_light_100</item>
        <item name="android:textColor">@color/secondary_light_600</item>
        <item name="android:textAppearance">@style/Subtitle2</item>
    </style>

    <!-- Toolbar -->
    <style name="ToolbarStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/rubik_normal</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@color/primary_dark_700</item>
    </style>

    <style name="RecipeCardBadget">
        <item name="android:textColor">@color/quantum_white_100</item>
        <item name="android:background">@drawable/rounded_borders_badget</item>
        <item name="android:padding">@dimen/badget_padding</item>
    </style>

    <style name="GenericCardTitle" parent="TextAppearance.MaterialComponents.Headline6">
    </style>

    <style name="GenericItemTitle" parent="TextAppearance.MaterialComponents.Body1">
    </style>

    <style name="DietCardTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/secondary_dark_1200</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="ItemTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/tertiary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Body2" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/tertiary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Heading1Legacy" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/bebas_neue_bold</item>
        <item name="android:textSize">29sp</item>
        <item name="android:textColor">@color/secondary_dark_900</item>
    </style>

    <style name="Heading1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/fredoka_regular</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">@color/secondary_light_300</item>
    </style>

    <style name="Heading2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="Heading3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/rubik_normal</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="Heading6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/bebas_neue_bold</item>
    </style>

    <style name="Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/rubik_normal</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/rubik_normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Subtitle2Legacy" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/rubik_normal</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/secondary_dark_1000</item>
    </style>

    <style name="Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_dark_1000</item>
    </style>
    
    <!-- Button -->
    <style name="ButtonPrimary">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/spacing_corner_button_medium</item>
        <item name="android:paddingLeft">@dimen/spacing_xxxlarge</item>
        <item name="android:paddingRight">@dimen/spacing_xxxlarge</item>
    </style>

    <style name="ButtonPrimary.Inverse" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/quaternary</item>
        <item name="backgroundColor">@color/quaternary</item>
        <item name="rippleColor">@color/quaternary</item>
    </style>

    <!-- Input -->
    <style name="InputPrimary" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/Subtitle2</item>
        <item name="boxStrokeColor">@color/secondary_light_200</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/primary_dark_700</item>
        <item name="startIconTint">@color/primary_dark_700</item>
    </style>

    <style name="PresentationTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#FAFAFA</item>
    </style>

    <!-- Bottom bar -->
    <style name="BottomBar" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="backgroundTint">@color/white</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/primary_dark_700</item>
        <item name="colorOnPrimary">@color/primary_dark_700</item>
        <item name="colorSurface">@color/secondary_light_400</item>
        <item name="colorOnSurface">@color/secondary_light_400</item>
    </style>

    <!-- Catalog Recipe detail -->
    <style name="CatalogRecipeMarketIngredientsHeader" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CatalogRecipeMarketIngredientPrice" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MarketIngredientUserHaveIngredient">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
