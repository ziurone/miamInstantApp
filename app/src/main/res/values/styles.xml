<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
    </style>

    <!-- Toolbar -->
    <style name="ToolbarStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@color/colorPrimary</item>
    </style>

    <style name="RecipeCardBadget">
        <item name="android:textColor">@color/quantum_white_100</item>
        <item name="android:background">@drawable/rounded_borders_badget</item>
        <item name="android:padding">@dimen/badget_padding</item>
    </style>

    <style name="GenericCardTitle" parent="TextAppearance.MaterialComponents.Headline6">
    </style>

    <style name="GenericItemTitle" parent="TextAppearance.MaterialComponents.Body1">
    </style>

    <style name="DietCardTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DietCardSubtitle">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/tertiary</item>
    </style>

    <style name="Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/bebas_neue_bold</item>
    </style>

    <style name="ButtonPrimary">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/spacing_corner_button_medium</item>
        <item name="android:paddingLeft">@dimen/spacing_xxxlarge</item>
        <item name="android:paddingRight">@dimen/spacing_xxxlarge</item>
    </style>

</resources>
